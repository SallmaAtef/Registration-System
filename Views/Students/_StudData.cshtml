@{
    Student student = (Student)ViewBag.CurrentStud;
}
<div class ="row">
<dl class="col-6 row">
    <dt class="col-2"> @Html.DisplayNameFor(d => student.Id)</dt>
    <dd class="col-10">@Html.DisplayFor(d => student.Id) | @Model.Id</dd>
    <dt class="col-2"> @Html.DisplayNameFor(d => student.FullName)</dt>
    <dd class="col-10"> @Html.DisplayFor(d => student.FullName) | @Model.FullName</dd>
    <dt class="col-2"> @Html.DisplayNameFor(d => student.Faculty)</dt>
    <dd class="col-10">@Html.DisplayFor(d => student.Faculty)| @Model.Faculty </dd>
    <dt class="col-2"> @Html.DisplayNameFor(d => student.BirthDate)</dt>
    <dd class="col-10"> @Html.DisplayFor(d => student.BirthDate) | @Model.BirthDate</dd>
    <dt class="col-2"> @Html.DisplayNameFor(d => student.JoinDate)</dt>
    <dd class="col-10"> @Html.DisplayFor(d => student.JoinDate) | @Model.JoinDate</dd>
    <dt class="col-2"> @Html.DisplayNameFor(d => student.IsActive)</dt>
    <dd class="col-10"> @Html.DisplayFor(d => student.IsActive) | @Model.IsActive</dd>
</dl>

    <img src ="@Model.ImagePath" class="card col-4" style="object-fit:contain" />
</div>

<ul class="col-4 list-group">
    <li class="list-group-item active">Course Name</li>
    @foreach (var instructor in student.Instructors)
    {
        <a asp-controller="Instructors" asp-action="GetDetailsView" asp-route-id="@instructor.Id" style="text-decoration:none">
        <li class="list-group-item  list-group-item-action">
                @instructor.FullName (@instructor.CourseName)
        </li>
        </a>
    }
</ul>